extends ./layouts/index

block contenido
    
    main.container.mt-5
        
        h1.text-center.mt-5 #{pagina}

        blockquote.text-center Lee sobre nuestro clientes y sus exeriencias
        include ./layouts/bloque_testimoniales



        .row
            .col-md-12
                h2.d-block.w-100.text-center Agregar un Testimonial

                if(errores)
                    each error in errores
                        .col.alert.alert-danger.text-center #{error.mensaje}

            .row.justify-content-center.col
                .col-md-8
                    form(action="/testimoniales", method="post")
                        .form-group
                            label(for="nombre") Nombre
                            input#nombre.form-control(type="text", placeholder='Tu Nombre', name='nombre', value=nombre)
                        .form-group
                            label(for="email") Correo Electr√≥nico
                            input#email.form-control(type="email", placeholder='Tu Correo', name='correo' value=correo)

                        .form-group
                            label(for="mensaje") Mensaje
                            textarea#mensaje.form-control(name="mensaje", placeholder='Tu Mensaje', rows=3) #{mensaje}

                        input.btn.btn-success.btn-block(type="submit", value="Enviar")


            